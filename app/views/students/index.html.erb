<div class="main">
  <h2 class="page_heading">生徒一覧</h2>

  <div class="grade_wrapper">

    <div class="grade_inner">

      <% @grades_lower.each do |grade| %>
        <ul class="student_list">
          <li class="grade_name"><%= grade.name %></li>
          <% @students.each do |student| %>
            <% if student.grade_id == grade.id %>
              <li class="list_default">
                <%= link_to student_results_path(student.id) do %>
                  <%= student.last_name %> <%= student.first_name %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>

    </div>

    <div class="grade_inner">

      <% @grades_higher.each do |grade| %>
        <ul class="student_list">
          <li class="grade_name"><%= grade.name %></li>
          <% @students.each do |student| %>
            <% if student.grade_id == grade.id %>
              <li class="list_default">
                <%= link_to student_results_path(student.id) do %>
                  <%= student.last_name %> <%= student.first_name %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>

    </div>

  </div>
</div>